<html>
    <head>
        <title>Edit {{ store.getName }}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

    </head>
    <body>
        <h1>Edit {{ store.getName }}</h1>

        <form action="/store/{{ store.getId }}" method="post">
            <input name="_method" type="hidden" value="patch">
            <label for="name">Enter new Name:</label>
            <input name="name" type="text" value="{{ store.getName }}">


            <button type="submit">Submit</button>
        </form>

        <form action="/store/{{ store.getId }}" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit">Delete Store</button>
        </form>

        <form action="/store/{{ store.getId }}">
            <button type="submit">Back</button>
        </form>
    </body>
</html>
